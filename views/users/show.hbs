     {{!-- EDIT MODAL --}}
    {{#each dog}}
    <div class="modal fade" id="edit-dog-modal{{_id}}" tabindex="-1" role="dialog">
      <div class="modal-dialog">
        <div class="modal-content">
          <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
            <h1>Edit Dog</h1>
              </div>
      <div class="modal-body">
       <!--    Start Form -->
         <section class="container dogModal">
          <div class="col-md-6 col-md-offset-1">
            <form method="post" action="/dashboard/{{id}}?_method=PUT" class="form-horizontal text-center move">
                <!-- Text input-->
                <div class="form-group">
                  <label class="col-md-6 control-label" for="name"></label>
                  <div class="col-md-6">
                  <input id="dogName" name="name" type="text" placeholder="name" value="{{name}}" class="form-control input-md" required="">
                  </div>
                </div>
                <!-- Text input-->
                <div class="form-group">
                  <label class="col-md-6 control-label" for="breed"></label>
                  <div class="col-md-6">
                  <input id="dogBreed" name="breed" type="text" placeholder="breed" value="{{breed}}" class="form-control input-md">
                  </div>
                </div>
                <!-- Text input-->
                <div class="form-group">
                  <label class="col-md-6 control-label" for="color"></label>
                  <div class="col-md-6">
                  <input id="dogColor" name="color" type="text" placeholder="color" value="{{color}}" class="form-control input-md">
                  </div>
                </div>
                     <!-- Textarea -->
                <div class="form-group">
                  <label class="col-md-6 control-label" for="age"></label>
                  <div class="col-md-6">
                    <input class="form-control" id="dogAge" name="age" placeholder="age" value="{{age}}"></input>
                  </div>
                </div>
                <!-- Textarea -->
             <div class="form-group">
                <label class="col-md-6 control-label" for="size"></label>
                <div class="col-md-6">
                <select class="form-control" id="size" name="size" value="{{size}}" required="">
                  <option disabled selected>Size</option>
                  <option>small</option>
                  <option>medium</option>
                  <option>large</option>
                </select>
             </div>
             </div>
                <!-- Textarea -->
              <div class="form-group">
                <label class="col-md-6 control-label" for="location"></label>
                <div class="col-md-6">
                  <input class="form-control" id="dogLocation" name="location" placeholder="location" value="{{location}}"></input>
                </div>
              </div>
                <div class="form-group">
                <label class="col-md-6 control-label" for="size"></label>
                <div class="col-md-6">
                <select class="form-control" id="neighborhoods" name="neighborhoods" value="{{neighborhoods}}" required="">
                    <option disabled selected>Neighborhood</option>
                    <option>Bernal Heights</option>
                    <option>The Castro</option>
                    <option>Chinatown</option>
                    <option>Cole Valley</option>
                    <option>Deco Ghetto</option>
                    <option>Fisherman's Wharf</option>
                    <option>Golden Gate Park</option>
                    <option>The Haight</option>
                    <option>Hayes Valley</option>
                    <option>Inner Richmond</option>
                    <option>Inner Sunset</option>
                    <option>The Marina</option>
                    <option>The Mission</option>
                    <option>Mission to Potrero</option>
                    <option>Dolores and Valencia Corridor</option>
                    <option>24th Street</option>
                    <option>Nob Hill</option>
                    <option>Noe Valley</option>
                    <option>North Beach</option>
                    <option>Outer Richmond</option>
                    <option>Outer Sunset</option>
                    <option>Pacific Heights</option>
                    <option>Potrero Hill</option>
                    <option>Russian Hill</option>
                    <option>SoMa</option>
                    <option>Tenderloin</option>
                    <option>Union Square</option>
                    <option>Western Addition</option>
                </select>
             </div>
             </div>
                <!-- Text input-->
              <div class="form-group">
                <label class="col-md-6 control-label" for="image"></label>
                <div class="col-md-6">
                <input id="dogImage" name="image" type="text" placeholder="image URL" value="{{image}}" class="form-control input-md">
                </div>
              </div>
              <!-- Text input-->
              <div class="form-group">
                <label class="col-md-6 control-label" for="reward"></label>
                <div class="col-md-6">
                <input id="dogReward" name="reward" type="text" placeholder="reward" value="{{reward}}" class="form-control input-md">
                </div>
              </div>
                <!-- Text input-->
              <div class="form-group">
                <label class="col-md-6 control-label" for="contact"></label>
                <div class="col-md-6">
                <input id="contact" name="contact" type="text" placeholder="Contact" value="{{contact}}" class="form-control input-md">
                </div>
              </div>
            <div class="form-group">
                <label class="col-md-6 control-label" for="status"></label>
                <div class="col-md-6">
                <select class="form-control" id="status" name="status" value="{{status}}" required="">
                  <option disabled selected>Lost, Found or Sighted</option>
                  <option>lost</option>
                  <option>found</option>
                  <option>sighted</option>
                </select>
             </div>
             </div>
              <!-- Textarea -->
              <div class="form-group">
                <label class="col-md-6 control-label" for="description"></label>
                <div class="col-md-6">
                  <input  type="text" class="form-control" id="dogDescript" name="description" placeholder="description" value="{{description}}">
                </div>
              </div>
              <!-- Button -->
                <label class="col-md-6 control-label" for="singlebutton"></label>
                <div class="col-md-4">
                  <button id="updating" type="submit" class="btn btn-primary" name="singlebutton">Submit</button>
                </div>
          </form>
            </div>
          </section>
           </div>
          </div>
         </div>
        </div>
        {{/each}}
